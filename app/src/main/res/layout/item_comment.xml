<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/marginJobDetail"
    android:layout_marginRight="@dimen/marginJobDetail"
    android:layout_marginLeft="@dimen/marginJobDetail"
    android:layout_marginBottom="64dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/emptyDiscuss"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Chưa có thảo luận nào"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="@drawable/background_discuss_text_view_cycle">

        <EditText
            android:hint="Nhập bình luận"
            android:layout_centerVertical="true"
            android:id="@+id/commentEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:background="@null"
            android:layout_toLeftOf="@+id/sendComment"
            android:layout_marginRight="@dimen/margin_16dp"
            android:maxLines="6"
            android:maxLength="2000"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/sendComment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/btn_send" />

    </RelativeLayout>

</LinearLayout>