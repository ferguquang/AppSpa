<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLogin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_centerInParent="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/marginLeftRightLogin"
        android:layout_marginLeft="@dimen/marginLeftRightLogin"
        android:layout_marginBottom="8dp"
        android:id="@+id/relativeLayout"
        android:layout_marginStart="@dimen/marginLeftRightLogin"
        android:layout_marginEnd="@dimen/marginLeftRightLogin">

        <RelativeLayout
            android:gravity="center"
            android:layout_marginLeft="@dimen/marginLeftRightLogin"
            android:layout_marginRight="@dimen/marginLeftRightLogin"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    app:cardCornerRadius="@dimen/radius_view"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginLeft="@dimen/marginSmallIcon"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/icon_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:layout_marginLeft="8dp"
                            android:background="@color/transparent"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorThin"
                            android:textSize="@dimen/textSizeEdt"
                            android:id="@+id/userName"
                            android:hint="Tên đăng nhập"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="@dimen/radius_view"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_marginLeft="@dimen/marginSmallIcon"
                            android:layout_width="@dimen/sizeIconBook"
                            android:layout_height="@dimen/sizeIconBook"
                            android:scaleType="fitXY"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            app:srcCompat="@drawable/icon_lock"
                            android:id="@+id/lock"/>

                        <EditText
                            android:layout_marginLeft="8dp"
                            android:background="@color/transparent"
                            android:inputType="textPassword"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorThin"
                            android:textSize="@dimen/textSizeEdt"
                            android:layout_centerInParent="true"
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mật khẩu"
                            android:layout_toRightOf="@+id/lock"
                            android:layout_toEndOf="@+id/lock"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginBottom="16dp"
                    android:id="@+id/login"
                    android:gravity="center"
                    app:cardCornerRadius="@dimen/radius_view"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="Đăng nhập"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/register"
                    android:gravity="center"
                    app:cardCornerRadius="@dimen/radius_view"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="Đăng kí"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>