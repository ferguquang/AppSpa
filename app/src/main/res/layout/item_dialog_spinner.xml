<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:id="@+id/llBackgroundSpinner"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_gravity="center"
        android:paddingRight="16dp"
        android:paddingLeft="18dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/textSize"
            android:id="@+id/txt_item_dialog_name"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="@color/black" />

        <ImageView
            android:layout_toRightOf="@+id/txt_item_dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/icon_asset_drop_down"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/diviner"
        android:background="@color/colorGrayIcon"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"/>

</LinearLayout>
