<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cvGroup"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="@color/main7"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llAssign"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.ngo.ducquang.appspa.base.view.TextViewFont
                    android:layout_toLeftOf="@+id/imgOption"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/name"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:maxLines="2"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="tên khách hàng đặt"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textTitleSizeBook" />

                <ImageView
                    android:id="@+id/imgOption"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/icon_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <com.ngo.ducquang.appspa.base.view.TextViewFont
                android:id="@+id/categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="Nối mi, săm mày, gội đầu"
                android:textColor="@color/black"
                android:textSize="@dimen/textTitleSizeBook" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llDateTimePromotion"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginRight="@dimen/margin_8dp"
                    app:srcCompat="@drawable/icon_asset_date_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.ngo.ducquang.appspa.base.view.TextViewFont
                    android:gravity="center_vertical"
                    android:text="Từ"
                    android:id="@+id/dateTimePromotion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAddress"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginRight="@dimen/margin_8dp"
                    app:srcCompat="@drawable/icon_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.ngo.ducquang.appspa.base.view.TextViewFont
                    android:gravity="center_vertical"
                    android:text="địa chỉ của khách"
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize" />

            </LinearLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/llDateCreate"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginRight="@dimen/margin_8dp"
                            app:srcCompat="@drawable/icon_date_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.ngo.ducquang.appspa.base.view.TextViewFont
                            android:gravity="center_vertical"
                            android:text="ngày tháng"
                            android:id="@+id/dateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llPhone"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginRight="@dimen/margin_8dp"
                            app:srcCompat="@drawable/icon_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.ngo.ducquang.appspa.base.view.TextViewFont
                            android:gravity="center_vertical"
                            android:text="0123456"
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize" />

                    </LinearLayout>

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    app:cardBackgroundColor="@color/colorIconMain"
                    android:id="@+id/cardViewStatus"
                    app:cardCornerRadius="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    app:cardElevation="0dp">

                    <com.ngo.ducquang.appspa.base.view.TextViewFont
                        android:layout_gravity="center"
                        android:text="đã hoàn thanh"
                        android:id="@+id/status"
                        android:textSize="@dimen/textSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/white" />

                </android.support.v7.widget.CardView>

            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>