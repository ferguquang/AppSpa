<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cvGroup"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="@color/white"
        android:layout_marginRight="24dp"
        android:layout_marginTop="@dimen/margin_4dp"
        android:layout_marginBottom="@dimen/margin_4dp"
        android:layout_marginLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/padding_8dp"
            android:layout_marginBottom="@dimen/padding_8dp"
            android:layout_marginLeft="@dimen/padding_16dp"
            android:layout_marginRight="@dimen/padding_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    app:srcCompat="@drawable/icon_asset_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.ngo.ducquang.appspa.base.view.TextViewFont
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/icon"
                    android:text="tên dịch vụ"
                    android:textSize="@dimen/textTitleSizeBook"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:id="@+id/name"
                    android:maxLines="1"
                    android:layout_toLeftOf="@+id/imgOption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/imgOption"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/icon_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llPrice"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    app:srcCompat="@drawable/icon_asset_money"
                    android:layout_width="@dimen/sizeIconBook"
                    android:layout_height="@dimen/sizeIconBook" />

                <TextView
                    android:layout_marginLeft="4dp"
                    android:text="Giá tiền: "
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    app:srcCompat="@drawable/icon_date_time"
                    android:layout_width="@dimen/sizeIconBook"
                    android:layout_height="@dimen/sizeIconBook" />

                <TextView
                    android:layout_marginLeft="4dp"
                    android:text="Thời gian hoàn thành: "
                    android:id="@+id/dateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    app:srcCompat="@drawable/icon_asset_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/describe"
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>